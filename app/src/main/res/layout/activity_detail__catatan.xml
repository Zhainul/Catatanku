<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_judul_catatan_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:theme="@style/Appku"
                    android:hint="Judul"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/edt_isi_catatan_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="22"
                    android:gravity="top"
                    android:textSize="16sp"
                    android:theme="@style/Appku"
                    android:hint="Isi" />

            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/img_catatan_detail"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginBottom="60dp"
                android:visibility="gone"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/btn_ubah_catatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:text="simpan catatan"
            android:textColor="@android:color/white"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <RelativeLayout
            android:layout_width="5dp"
            android:layout_height="match_parent">
        </RelativeLayout>

        <Button
            android:id="@+id/btn_hapus_catatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn"
            android:layout_gravity="center_vertical"
            android:text="hapus catatan"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>